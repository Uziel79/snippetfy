<section class="snippets-list">
  <div class="list-header">
    <a href="#" data-modal-open="#new-snippet">NOVO SNIPPET</a>
  </div>

  {% for snippet in snippets %}
    <a href="/app/categories/{{ activeCategory }}/snippets/{{ snippet.id }}">
      <strong>{{ snippet.title }}</strong>
      <p>{{ snippet.excerpt }}</p>
    </a>
  {% endfor %}
</section>
<div class="modal" id="new-snippet">
  <form action="/app/categories/{{ activeCategory }}/snippets/create"
  method="POST"
  class="modal-content">
    <input type="text" name="title" id="title" placeholder="Título do snippet">
    <div class="content-container">
      <textarea name="content" id="content" class="mde" placeholder="Conteúdo do snippet"></textarea>
    </div>

    <button type="submit">SALVAR SNIPPET</button>
    <a href="#" data-modal-close="#new-snippet">CANCELAR</a>
  </form>
</div>
